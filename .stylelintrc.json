{
  "extends": ["stylelint-config-standard", "stylelint-config-css-modules"],
  "plugins": ["stylelint-rem-over-px"],
  "rules": {
    "rem-over-px/rem-over-px": [
      true,
      {
        "ignore": [
          "border",
          "outline",
          "box-shadow",
          "width",
          "min-width",
          "max-width"
        ]
      }
    ]
  }
}
